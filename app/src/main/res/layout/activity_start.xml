<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFF9C4">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:text="INTERSTING FACTS"
        android:textSize="28sp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="300dp"
                app:srcCompat="@drawable/walt" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:fontFamily="@font/reg"
                android:text="\nWalt Disney did not draw Mickey Mouse.\nWalt was the original voice of Mickey Mouse.\nWalt's brother, Roy, started as a vacuum salesman.\nWalt had a private getaway on Main Street U.S.A."
                android:textColor="#000000"
                android:textSize="25dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left">

            <TextView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:fontFamily="@font/reg"
                android:text="\nMickey started out as a rabbit.\nMickey is married.\nMickey's first words were: “Hot dogs!”\nHis magic helped turned children into stars.\nMickey doesn't wear white gloves for fashion."
                android:textColor="#000000"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="300dp"
                app:srcCompat="@drawable/mickey" />
        </TableRow>
    </TableLayout>
</LinearLayout>